{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "globals": {
    "describe": true,
    "test": true,
    "expect": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"]
  }
}
